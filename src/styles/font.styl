h1,
h2,
h3,
h4,
h5,
h6,
p {
  margin: 0;
}
h1 {
  font-size: 45px;
  font-weight: 600;
  line-height: 0.98;
}
@media (min-width: 768px) {
  h1 {
    font-size: 50px;
  }
}
@media (min-width: 980px) {
  h1 {
    font-size: 60px;
  }
}
@media (min-width: 1220px) {
  h1 {
    font-size: 80px;
  }
}
h2 {
  font-size: 35px;
  font-weight: 600;
  line-height: 1.1;
}
@media (min-width: 500px) {
  h2 {
    font-size: 40px;
  }
}
@media (min-width: 980px) {
  h2 {
    font-size: 47px;
  }
}
h3 {
  font-size: 28px;
  font-weight: 600;
  line-height: 1.2;
}
@media (min-width: 980px) {
  h3 {
    font-size: 34px;
  }
}
h4 {
  font-size: 23px;
  font-weight: 600;
  line-height: 1.17;
}
@media (min-width: 360px) {
  h4 {
    font-size: 26px;
  }
}
@media (min-width: 980px) {
  h4 {
    font-size: 30px;
  }
}
h5 {
  font-size: 24px;
  font-weight: 600;
  line-height: 30px;
}
p,
li {
  font-size: 20px;
  font-weight: 400;
  line-height: 1.25;
}