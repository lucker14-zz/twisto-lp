.container__inner--accounts

    p
        max-width 790px
        text-align center
        
        &.upper, &.bottom
            margin 30px 0 65px 0
    
    h2,p
        width 100%
        text-align center
            
.bullets
    display flex
    flex-flow row wrap
    justify-content center
    align-items center
    
    width 100%
    
    &-half
        display flex
        flex-flow column wrap
        justify-content center
        align-items center
        
        width 100%
        max-width 520px
        
        @media screen and (max-width 1035px)
            width 85vw
        
        div.ul
            flex-flow column wrap
            justify-content flex-start
            align-items center
            width 100%

            @media screen and (max-width $screen-xs)
                width 100%

            div.li
                flex-flow row wrap
                justify-content flex-start
                align-items center
                
                
                width 100%

                margin-bottom 30px
                font-size 24px
                
                color white
                
                @media screen and (max-width $screen-sm)
                    flex-flow row nowrap
                
                span
                    
                    @media screen and (max-width $screen-sm)
                        max-width 90%
                        font-size 20px
                        line-height 38px
                
                div.bullet
                    width 8px
                    height 8px
                    
                    margin-right 10px

                    background-size cover
                    background-position center
                    background-repeat no-repeat
