.container__inner--shops
    
    h2
        color white
        font-size 44px
    
    .shops
        width 100%
        flex-flow row wrap
        justify-content center
        align-items center
        
        @media screen and (max-width $screen-pc)
            flex-flow column wrap
        
        &-left
            width 30%
            height 400px
            
            flex-flow column wrap
            justify-content center
            align-items flex-start
            
            p
                margin 20px 0
                color white
                opacity 0.8
                line-height 38px
                max-width 350px
                
            
            @media screen and (max-width $screen-pc)
                width 100%
                height auto
                margin-bottom 50px
                
                p
                    float none
                    margin 20px auto
                    text-align center
                
                h2
                    width 100%
                    text-align center

        &-right
            width 70%
            height 400px
            
            flex-flow row wrap
            justify-content space-between
            align-items stretch
            
            @media screen and (max-width $screen-pc)
                width 100%
                height auto
                
            @media screen and (max-width $screen-xs)
                justify-content center
            
        &__icon
            display flex
            flex-flow column wrap
            justify-content space-around
            align-items center
            
            width 188px
            height 188px
            
            border-radius 8px 8px 20px 8px
            background-color white
            
            &:nth-child(0), &:nth-child(1), &:nth-child(2), &:nth-child(3)
                margin-bottom 40px  
                
            @media screen and (max-width $screen-pc)
                margin-bottom 40px
                margin-right 20px
                margin-left 20px
                
            @media screen and (max-width $screen-sm)
                margin-bottom 20px
                margin-right 10px
                margin-left 10px
                
            p
                font-weight 900
                font-size 22px
                
            p.sale
                color #F2A800
                font-size 18px
                font-weight 500

.button--black
    background-color #211f26
    border 2px solid white
    
    &:hover
        background-color #211f26
    
    @media screen and (max-width $screen-pc)
        float none
        margin 0 auto