.container__inner--shops
    
    h2
        color white
        margin-bottom 45px
        font-size 44px
    
    .shops
        width 100%
        flex-flow row wrap
        justify-content center
        align-items center
        
        &-left
            width 30%
            height 400px
            
            flex-flow column wrap
            justify-content center
            align-items flex-start
            
        &-right
            width 70%
            height 400px
            
            flex-flow row wrap
            justify-content space-between
            align-items stretch
            
        &__icon
            display flex
            flex-flow column wrap
            justify-content space-around
            align-items center
            
            width 188px
            height 188px
            
            border-radius 8px 8px 20px 8px
            background-color white
            
            &:nth-child(0), &:nth-child(1), &:nth-child(2), &:nth-child(3)
                margin-bottom 40px  
                
            p
                font-weight 900
                font-size 22px
                
            p.sale
                color #F2A800
                font-size 18px
                font-weight 500

