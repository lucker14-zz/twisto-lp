.container__inner--how
    
    p
        max-width 750px
        text-align center
        margin 30px 0 60px
        line-height 38px
        
    h2
        width 100%
        text-align center
        
    .tech
        margin-bottom 45px
        
        position relative
        
        img#iphone
            position absolute
            bottom 0
            left 1.5%
            
            width 198px
            height 406px
            
            @media screen and (max-width $screen-sm)
                height 50vw
                width 24vw
            
        div#air
            width 1035px
            height 605px
            
            background-image url('assets/how-mbair.png')
            background-size contain
            background-position center
            background-repeat no-repeat
            
            @media screen and (max-width $screen-md)
                background-image url('assets/how-mbair-clear.png')
            
            @media screen and (max-width $screen-pc)
                width 100vw
                height 56vw
                
                max-width 1035px
                max-height 605px
                